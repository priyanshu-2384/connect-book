<% layout("layouts/boilerplate") %>

        <div class="row">
            <div class="col-8 offset-2">
                <br><br>
                <h2>Edit this Listing</h2>
                <br>
                <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input value="<%=listing.title%>" name="listing[title]" type="text" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input value="<%=listing.location%>" name="listing[location]" type="text" class="form-control" required>
                    </div class="mb-3">

                    <div class="row">
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input value="<%=listing.country%>" name="listing[country]" type="text"
                                class="form-control" required>
                        </div>

                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input value="<%=listing.price%>" name="listing[price]" type="listing[number]"
                                class="form-control" required>
                        </div>

                    </div>

                    <div class="mb-3">
                        Original Listing Image <br/>
                        <img src="<%=originalUrl%>" width="250px" height="200px"/>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input  name="listing[image]" type="file" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <br>
                        <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
                    </div>
                    <button class="btn btn-dark add-btn">Edit</button>
                </form>
            </div>
        </div>