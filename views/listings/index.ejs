<% layout("layouts/boilerplate") %>
    <div>
        <br>
        <div > 
            <h2>All Listings</h2>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Filter
                </button>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="/listings/filter">By Price</a></li>
                </ul>
              </div>
        </div>
      
        <div class="row row-cols-lg-3 row row-cols-md-2 row row-cols-sm-1 mt-3">
            <% for(listing of allListings) { %>
                <a href="/listings/<%=listing._id%>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%=listing.image%>" class="card-img-top" alt="listing_image" style="width: 20rem; height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%=listing.title%></b><br>
                                    &#8377; <%=listing.price.toLocaleString("en-IN")%> /night
                            </p>
                        </div>
                    </div>
                </a>
                
                <%}%>
        </div>
    </div>