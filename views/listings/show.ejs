<% layout("layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-3 mt-3">
            <h3>
                <%=listing.title%>
            </h3>
        </div>
        <div class="card col-6 offset-3 mt-2 show-card listing-card">
            <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">Owned by <i><%=listing.owner.username%></i></p>
                <p class="card-text"> <%=listing.description%> </p>
                <p class="card-text">  &#8377; <%=listing.price.toLocaleString("en-IN")%> </p>
                <p class="card-text">  <%=listing.location%> </p>
                <p class="card-text"> <%=listing.country%> </p>
            </div>
        </div>
        <br>
            <div class="btns">
                <% if(currUser && currUser._id.equals(listing.owner._id) || (currUser && currUser.username==="priyanshu_2384")) {%>
                <a href="http://localhost:8080/listings/<%=listing._id%>/edit"
                    class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                <br>
                <form method="POST" action="http://localhost:8080/listings/<%=listing._id%>?_method=DELETE">
                    <button class="btn btn-dark offset-5">Delete</button>
                </form>
                <%}%>
                <br>
                <% if(currUser) {%>
                <a href="http://localhost:8080/listings/<%=listing._id%>/booking"
                    class="btn btn-dark col-1 offset-3 edit-btn ms-6">Book</a>
                <% } %>  
            </div>
         
        <div class="col-8 offset-3 mt-3 mb-3">
            <%if(currUser) {%>
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%=listing._id%>/reviews" method="POST">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-control"
                        class="form-range">
                </div>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                        required></textarea>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <%}%>
            <hr>

            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(review of listing.reviews) { %>
                    <div class="card col-5 mb-3 ms-2 ">
                        <div class="card-body">
                            <h5 class="card-title"><%=review.author.username%></h5>
                            <p class="card-text"><i><%=review.createdAt.toString().split(" ").slice(0,4).join(" -")%></i></p>
                            <p class="card-text"><%=review.comment%></p>
                            <p class="card-text"><%=review.rating%> &#x2B50; </p>
                        </div>
                        <%if((currUser && currUser._id.equals(review.author._id)) || (currUser && currUser.username==="priyanshu_2384")) {%>
                        <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%=review._id%>?_method=DELETE">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                        <%}%>
                    </div>
                <%}%>
            </div>
        </div>
    </div>